<resources>
    <style name="ImageViewerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">#fff</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarLogin</item>
        <item name="android:textColorHighlight">@color/light_blue</item>
    </style>
    <style name="messageTxt">
        <item name="android:imeOptions">flagNoExtractUi|actionSend</item>
    </style>
    <style name="ProgressBarLogin" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/login_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/login_progress_indeterminate_horizontal_holo_dark</item>
    </style>
    <style name="Widget.Styled.ImageButton" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="SeekBarmain" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/main_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/main_scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/main_scrubber_control_selector_holo_light</item>
    </style>

    <style name="ThemedActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
        <item name="background">?actionbarDrawable</item>
    </style>

    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?navBarHeadingColor</item>
    </style>
</resources>