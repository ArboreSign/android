<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarMain</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="dialogTheme">@style/AppDialogTheme</item>
        <item name="alertDialogTheme">@style/AppAlertTheme</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fastScrollThumbDrawable">@drawable/main_fastscroll_thumb_holo</item>
    </style>
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarMain</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="dialogTheme">@style/AppDialogTheme</item>
        <item name="alertDialogTheme">@style/AppAlertTheme</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fastScrollThumbDrawable">@drawable/main_fastscroll_thumb_holo</item>
        <item name="actionModeBackground">@drawable/actionbar</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarWidgetTheme">@style/CustomShareIcon</item>
    </style>
    <style name="ImageViewerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">#fff</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarLogin</item>
    </style>
    <style name="DialogWhenLargeTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarMain</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="dialogTheme">@style/AppDialogTheme</item>
        <item name="alertDialogTheme">@style/AppAlertTheme</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fastScrollThumbDrawable">@drawable/main_fastscroll_thumb_holo</item>
    </style>
    <style name="PastebinEditorTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarMain</item>
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorAccent">#888</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="dialogTheme">@style/AppDialogTheme</item>
        <item name="alertDialogTheme">@style/AppAlertTheme</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fastScrollThumbDrawable">@drawable/main_fastscroll_thumb_holo</item>
    </style>
    <style name="messageTxt">
        <item name="android:imeOptions">flagNoExtractUi|actionSend</item>
    </style>
    <style name="ProgressBarLogin" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/login_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/login_progress_indeterminate_horizontal_holo_dark</item>
    </style>
    <style name="Widget.Styled.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar</item>
    </style>
    <style name="Widget.Styled.ImageButton" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="SeekBarmain" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/main_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/main_scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/main_scrubber_control_selector_holo_light</item>
    </style>
</resources>