<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/light_blue"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <net.yanzm.mth.MaterialTabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/paste"
                android:inputType="textMultiLine"><requestFocus/></EditText>

            <TextView
                android:id="@+id/filename_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="#000"
                android:text="File name (optional)"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <EditText
                android:id="@+id/filename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:nextFocusDown="@+id/message"
                android:inputType="textUri"/>

            <!-- Dummy item to prevent EditText from receiving focus on launch -->

            <LinearLayout
                android:focusable="true" android:focusableInTouchMode="true"
                android:layout_width="0px" android:layout_height="0px"><requestFocus/></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="#000"
                android:text="Message (optional)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/message_heading" />

            <EditText
                android:id="@id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="0"
                android:nextFocusUp="@id/filename"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="#000"
                android:text="Text will be sent as 1 message"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/messages_count"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
