<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    app:contentPaddingLeft="16dp"
    app:contentPaddingRight="16dp"
    app:contentPaddingBottom="16dp"
    app:contentPaddingTop="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:minHeight="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#feedback (300 members)"
        android:textColor="#000"
        android:textColorLink="@color/dialogLinkColor"
        android:layout_marginBottom="6dp"
        android:textSize="16sp" />
     
     <TextView
         android:id="@+id/topic"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="https://twitter.com/irccloud | #changelog | Tell us your first impressions, don't spare our feelings | Extension/API discussion happens in #themes | Server migration on hold for now, welcome back to the old server | https://blog.irccloud.com/sep-2012-downtime-postmortem"
         android:textColor="@color/timestamp"
         android:textColorLink="@color/dialogLinkColor"
         android:textSize="14sp"
         android:textStyle="italic" />
    </LinearLayout>
</android.support.v7.widget.CardView>