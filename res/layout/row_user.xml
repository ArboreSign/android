<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.irccloud.android.ColorScheme"/>
        <import type="android.view.View"/>
        <variable name="user" type="com.irccloud.android.fragment.UsersListFragment.UserListEntry"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:background="@{ user.border_color }"
        android:orientation="horizontal" >

        <TextView
            android:layout_marginLeft="@dimen/usergroup_border"
            android:layout_marginBottom="@{ user.last ? @dimen/usergroup_border : 0 }"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxLines="1"
            android:text="@{ user.text }"
            android:textColor="@{ user.type == 0 ? @color/white : (user.away ? ColorScheme.getInstance().memberListAwayTextColor : ColorScheme.getInstance().memberListTextColor ) }"
            android:background="@{ user.type > 0 ? user.bg_color : user.border_color }"
            android:textSize="16sp" />

        <TextView
            android:text="@{ user.count }"
            android:textColor="@{ @color/white }"
            android:visibility="@{ user.count != null ? View.VISIBLE : View.GONE }"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="12dp" />

    </LinearLayout>
</layout>