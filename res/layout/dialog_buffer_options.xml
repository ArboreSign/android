<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="vertical">
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/unread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track unread messages" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/joinpart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show nick changes, joins, and parts" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/collapse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collapse nick changes, joins, and parts" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/expandDisco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group repeated disconnects" />

    </LinearLayout>
</ScrollView>